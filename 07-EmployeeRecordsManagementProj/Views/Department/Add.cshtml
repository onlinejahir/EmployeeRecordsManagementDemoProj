@model DepartmentCreateViewModel
@{
    ViewData["Title"] = "Department";
}

<div class="container">
    @if (ViewBag.Message != null)
    {
        <div class="alert-success">
            @ViewBag.Message
        </div>
    }
    <div class="p-4">
        <div class="col-md-12">
            <h3>Add new department</h3>
        </div>
    </div>
    <div class="p-4">
        <div class="col-md-6">
            <form asp-asp-controller="Department" asp-action="Add" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="DepartmentName" class="form-label fw-bold">Department Name</label>
                    <input asp-for="DepartmentName" type="text" class="form-control" />
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-dark">Submit</button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}