@model IEnumerable<DepartmentCreateViewModel>
@{
    ViewData["Title"] = "All Departments";
}

<div class="container p-4">
    <div class="row">
        <div class="col-md-12">
            <h3 class="p-4">All Departments</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">ID</th>                         
                        <th scope="col">Department Name</th>                         
                        <th></th>                         
                        <th></th>                         
                    </tr>
                </thead>
                <tbody>
                    @foreach(var department in Model)
                    {
                        <tr>
                            <td>@department.DepartmentId</td>
                            <td>@department.DepartmentName</td>
                            <td><a class="btn btn-dark" asp-controller="Department" asp-action="Edit" asp-route-id="@department.DepartmentId">Edit</a></td>
                            <td><a class="btn btn-danger" asp-controller="Department" asp-action="Delete" asp-route-id="@department.DepartmentId" onclick="return confirm('Are you sure you want to delete this department')">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>